	
	<div class="container">
		<h1 id=""> {{title}} </h1>
	</div>

	<hr/>

	<div class="container">
		<form action="/products" method="post" name="addNewProduct">

		<label>Name:</label>

		<input id="inputName" type="text" placeholder="ShortSleeve Shirt" name="name"/>

		<label>Category:</label>

		<select id="inputCategory" name="category"/>
			<option value="men">Men</option>
			<option value="woman">Woman</option>
			<option value="kids">Kids</option>
		</select>

		<label>Size:</label>

		<input id="inputSize" type="number" placeholder="M" name="size"/>

		<label>Color:</label>

		<select id="inputColor" name="color"/>
			<option value="red">Red</option>
			<option value="black">Black</option>
			<option value="grey">Grey</option>
		</select>

		<button id="btnSubmit" type="submit" class="btn btn-primary">Submit</button>

		</form>
	</div>